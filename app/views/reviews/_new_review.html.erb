<%= form_with model: [demon, review], class: " card p-3 d-flex flex-column align-items-start" do |f| %>
  <%= f.label :comment, class: "form-label" %>
  <%= f.text_field :comment, class: "form-control" %>
  <%= f.label :rating, class: "form-label" %>
  <%= f.number_field :rating, class: "mb-3 form-control" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>