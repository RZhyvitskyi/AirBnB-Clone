<li class="list-group-item p-3">
  <div class="row">
    <div class="col-8">
      <h5 class="mb-3"><%= review.user.name %></h5>
      <p class="m-0"><%= review.comment %></p>
    </div>
    <div class="col-4 text-end">
      <span class="badge bg-primary rounded-pill mb-2"><%= review.rating %></span>
      <% if review.user == user %>
        <%= button_to "Delete", review_path(review), method: :delete, class: "btn btn-danger" %>
      <% end %>  
    </div>
  </div>
</li>
